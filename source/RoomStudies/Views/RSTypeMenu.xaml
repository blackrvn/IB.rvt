<UserControl x:Class="RoomStudies.Views.RSTypeMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoomStudies.Views"
             xmlns:viewModel="clr-namespace:RoomStudies.ViewModels"
             xmlns:userControls="clr-namespace:Library.Views.UserControls;assembly=Library"
             d:DataContext="{d:DesignInstance viewModel:RSTypeMenuViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Library;component/Views/Styles/MergedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <userControls:HeaderedDropDown
                Header="{Binding HeaderTitleBlock}"
                ItemsSource="{Binding TitleBlockTypes}"
                FilteredItems="{Binding FilteredTitleBlockTypes}"
                SelectedItem="{Binding SelectedTitleBlockType}"
                SearchText="{Binding SearchTextTitleBlockType, Mode=TwoWay}"
                SearchBoxPlaceHolder="{Binding PlaceHolder}"
                HorizontalAlignment="Stretch"
                CornerRadius="5"
                ColumnWidths="{Binding ColumnWidths}"/>
            <userControls:HeaderedDropDown
                Header="{Binding HeaderFloorViewTemplate}"
                ItemsSource="{Binding FloorViewTemplates}"
                FilteredItems="{Binding FilteredFloorViewTemplates}"
                SelectedItem="{Binding SelectedFloorViewTemplate}"
                SearchText="{Binding SearchTextFloorViewTemplate, Mode=TwoWay}"
                SearchBoxPlaceHolder="{Binding PlaceHolder}"
                HorizontalAlignment="Stretch"
                CornerRadius="5"
                ColumnWidths="{Binding ColumnWidths}"/>
            <userControls:HeaderedDropDown
                Header="{Binding HeaderCeilingViewTemplate}"
                ItemsSource="{Binding CeilingViewTemplates}"
                FilteredItems="{Binding FilteredCeilingViewTemplates}"
                SelectedItem="{Binding SelectedCeilingViewTemplate}"
                SearchText="{Binding SearchTextCeilingViewTemplate, Mode=TwoWay}"
                SearchBoxPlaceHolder="{Binding PlaceHolder}"
                HorizontalAlignment="Stretch"
                CornerRadius="5"
                ColumnWidths="{Binding ColumnWidths}"/>
            <userControls:HeaderedDropDown
                Header="{Binding HeaderElevationViewTemplate}"
                ItemsSource="{Binding ElevationViewTemplates}"
                FilteredItems="{Binding FilteredElevationViewTemplates}"
                SelectedItem="{Binding SelectedElevationViewTemplate}"
                SearchText="{Binding SearchTextElevationViewTemplate, Mode=TwoWay}"
                SearchBoxPlaceHolder="{Binding PlaceHolder}"
                HorizontalAlignment="Stretch"
                CornerRadius="5"
                ColumnWidths="{Binding ColumnWidths}"/>
        </StackPanel>
    </Grid>
</UserControl>
