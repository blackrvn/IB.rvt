<libViews:BaseView
    x:Class="RoomStudies.Views.RSSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="clr-namespace:RoomStudies.ViewModels"
    xmlns:libViews="clr-namespace:Library.Views;assembly=Library"
    xmlns:view="clr-namespace:RoomStudies.Views"
    xmlns:userControls="clr-namespace:Library.Views.UserControls;assembly=Library"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModel:RSSettingsViewModel}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    Title="{Binding CommandName}"
    Height="700"
    Width="1000">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Library;component/Views/Styles/MergedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:RSTypeMenuViewModel}">
                <view:RSTypeMenu/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:RSNamingMenuViewModel}">
                <view:RSNamingMenu/>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="IB" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Left"
            Margin="10,0,0,0"
            FontSize="22">
        </TextBlock>

        <userControls:MenuControl MenuItems="{Binding Views}" CurrentSelection="{Binding CurrentView, Mode=TwoWay}" CornerRadius="5" Spacing="10" Grid.Row="1"/>

        <ContentControl 
            Grid.Row="1" 
            Grid.Column="1" 
            Content="{Binding CurrentView}"/>

        <Button 
            Grid.ColumnSpan="3" 
            Grid.Row="3" 
            Width="Auto"
            Height="Auto"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="10,0"
            Content="{Binding ButtonOKName}" 
            Command="{Binding OkCommand}"/>
        <Button 
            Grid.ColumnSpan="3" 
            Grid.Row="3" 
            Width="Auto"
            Height="Auto"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="10,0"
            Content="{Binding ButtonCancelName}" 
            Command="{Binding CancelCommand}"/>

    </Grid>
</libViews:BaseView>