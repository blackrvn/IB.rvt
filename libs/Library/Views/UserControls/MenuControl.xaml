<UserControl x:Class="Library.Views.UserControls.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Views.UserControls"
             xmlns:behaviors="clr-namespace:Library.Views.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200"
             x:Name="root">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Library;component/Views/Styles/MergedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Define a style based on GreyListBoxItem but with customized margin -->
            <Style x:Key="CustomListBoxItemStyle" TargetType="ListBoxItem" BasedOn="{StaticResource GreyListBoxItem}">
                <Setter Property="Margin" Value="{Binding Spacing, ElementName=root}"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- Main container -->
    <Grid>
        <ListBox ItemsSource="{Binding MenuItems, ElementName=root}"
             SelectedItem="{Binding CurrentSelection, ElementName=root, Mode=TwoWay}"
             Background="Transparent"
             BorderThickness="1"
             HorizontalContentAlignment="Stretch"
             VerticalContentAlignment="Center"
             ItemContainerStyle="{StaticResource CustomListBoxItemStyle}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!-- Display the Name property of each ViewModel -->
                    <TextBlock Text="{Binding Name}" 
                     FontSize="12"
                     VerticalAlignment="Center" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
